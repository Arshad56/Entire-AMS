                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Cancel Purchase Order</description>
        <label>To Cancel Purchase Order</label>
        <name>To_Cancel_Purchase_Order</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>3 AND ((1 AND 2) OR (4 AND 5))</booleanFilter>
        <criteriaItems>
            <field>Purchase_Order__c.Received_Quantity__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Purchase_Order__c.Received_Amount__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Purchase_Order__c.Status__c</field>
            <operation>equals</operation>
            <value>Issued</value>
        </criteriaItems>
        <criteriaItems>
            <field>Purchase_Order__c.Total_Receipt_Amount__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Purchase_Order__c.Total_Receipt_Amount_With_Tax__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Bypass_Validation_Rule</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_mail_on_cancel_of_purchase_order_for_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Cancelled</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
