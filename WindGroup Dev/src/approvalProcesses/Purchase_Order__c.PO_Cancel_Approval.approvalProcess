        </action>
        <action>
            <name>Update_Status_to_Cancel_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Notification_mail_on_cancel_of_purchase_order_for_approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Cancel_In_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PO Cancel Approval</label>
    <recordEditability>AdminOnly</recordEditability>
